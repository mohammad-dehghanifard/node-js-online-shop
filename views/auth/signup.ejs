<%- include("../inc/heading.ejs") %>



<section class="vh-100" style="background-color: #508bfc">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem">
            <div class="card-body p-5 text-center">

              <!-- نمایش خطا در صورت وارد کردن ایمیل نامعتبر -->
              <% if(errorMsg != null){ %>
                <div class="alert alert-danger" role="alert">
                  <%= errorMsg %>
                </div>
                <% } %>

              <h3 class="mb-5">ثبت نام</h3>

              <form action="/signup" method="post" novalidate>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="form-outline mb-4" <%= validateErrors.find(object => object.path === 'name')? 'alert-danger' : '' %>>
                  <input name="name" type="text" id="typeEmailX-2" class="form-control form-control-lg" placeholder="نام کاربری خود را وارد کنید"
                  value="<% if(oldInput !== null){ %><%= oldInput.name %><% } %>">
                </div>

                <div class="form-outline mb-4">
                  <input name="email" type="email" id="typeEmailX-2" class="form-control form-control-lg" placeholder="ایمیل خود را وارد کنید"
                  value="<% if(oldInput !== null){ %><%= oldInput.email %><% } %>">
                </div>
  
                <div class="form-outline mb-4">
                  <input name="passWord" type="password" id="typePasswordX-2" class="form-control form-control-lg" placeholder="رمز عبور را وارد کنید"
                  value="<% if(oldInput !== null){ %><%= oldInput.passWord %><% } %>">
                </div>

                <div class="form-outline mb-4">
                    <input name="confirmPassWord" type="password" id="typePasswordX-2" class="form-control form-control-lg" placeholder="رمز عبور خود را تائید کنید"
                    value="<% if(oldInput !== null){ %><%= oldInput.confirmPassWord %><% } %>">
                  </div>
  
                <button class="btn btn-success btn-lg btn-block" type="submit">
                  ثبت نام
                </button>
              </form>


           
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

<%- include("../inc/fotter.ejs") %>