<%- include("../inc/heading.ejs") %>
<%- include("../inc/shop_head.ejs") %>
<%- include("../inc/navbar.ejs") %>

<main>
    <div class="container">
      <form action="/admin/add-product" method="post">
        <div class="form-group">
          <label for="title">عنوان</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            placeholder="نام محصول را وارد کنید"
          />
        </div>
        <div class="form-group">
          <label for="title">قیمت</label>
          <input
            type="number"
            class="form-control"
            id="price"
            name="price"
            placeholder="قیمت محصول را وارد کنید"
          />
        </div>
        <div class="form-group">
          <label for="title">آدرس عکس</label>
          <input
            type="text"
            class="form-control"
            id="imageUrl"
            name="imageurl"
            placeholder="عکس محصول را وارد کنید"
          />
        </div>
        <div class="form-group">
          <label for="title">توضیحات</label>
          <textarea
            class="form-control"
            name="content"
            cols="30"
            rows="10"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">ثبت</button>
      </form>
    </div>
  </main>

<%- include("../inc/fotter.ejs") %>
