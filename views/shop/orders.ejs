<main>
    <main>

      <% if(refId){ %>
        <div class="alert alert-success" role="alert">
          <h2>پرداخت شما با موفقیت انجام شد</h2>
          <hr>
          <h3> شماره پیگیری سفارش : <%= refId %></h3>
        </div>
        <% } %>



  <ul class="orders">
    <% orders.forEach(order => { %>
    <li class="orders_item">
      <h1>شناسه سفارش - <%= order._id %> - <a href="/invoices/<%= order._id %>">دریافت  گزارش</a> </h1>
      <ul class="orders_products">
        <% order.products.forEach(p =>{ %>
        <li class="orders_products_item">
          <%= p.product.title %> (<%= p.quantity %>)
        </li>
        <% }); %>
      </ul>
    </li>
    <% }); %>

  </ul>
</main>
</main>

